{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "typings/index.d.ts",
    "typings/index"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "src/custom_typings.d.ts",
    "typings/index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "files": [
    "typings/index.d.ts",
    "./src/app/app.component.ts",
    "./src/app/another/another.component.ts",
    "./src/app/core/chat-sidebar/chat-message/chat-message.component.ts",
    "./src/app/core/chat-sidebar/chat.service.ts",
    "./src/app/core/chat-sidebar/chat-sidebar.component.ts",
    "./src/app/core/config.service.ts",
    "./src/app/core/core.component.ts",
    "./src/app/core/navbar/navbar.component.ts",
    "./src/app/core/notifications/notification-load.directive.ts",
    "./src/app/core/notifications/notifications.component.ts",
    "./src/app/core/pipes/search.pipe.ts",
    "./src/app/core/sidebar/sidebar.component.ts",
    "./src/app/core/widget/widget.directive.ts",
    "./src/app/dashboard/dashboard.component.ts",
    "./src/app/error/error.component.ts",
    "./src/app/login/login.component.ts",
    "./src/main.ts",
    "./src/polyfills.ts"
  ]
}
